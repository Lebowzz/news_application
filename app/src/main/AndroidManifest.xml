<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Usermodule">

        <!-- Login Activity as the Launcher -->
        <activity
            android:name=".views.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Sign-Up Activity -->
        <activity android:name=".views.SignUpActivity" />

        <!-- Account Info Activity -->
        <activity android:name=".views.AccountInfoActivity" />

        <!-- News Page Activity -->
        <activity android:name=".views.NewsPageActivity" />

        <!-- Admin Dashboard Activity -->
        <activity android:name=".views.AdminDashboardActivity" />

        <!-- Edit User Info Activity -->
        <activity android:name=".views.EditUserInfoActivity" />

        <!-- Main Activity -->
        <activity android:name=".views.MainActivity" />
    </application>
</manifest>
